set from = "chneeb@gmail.com"
set realname = "Christian Neeb"

set sendmail="/opt/local/bin/msmtp"
set mbox_type=Maildir

set folder="~/Maildir"
set mask = "^\\.[^\\.]"
set mbox="~/Maildir"
set record="+.Sent"
set postponed="+.Drafts"
set spoolfile="~/Maildir"
#set signature="~/.sig"

set use_envelope_from = yes
set mark_old = no
set move = no

mailboxes "=.Spam" "=.GMX"

set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates

set sort = 'threads'
set sort_aux = 'last-date-received'

ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc

# Pretty Colors
color status white blue
color index green  default ~N  # new
color index red default ~D  # deleted
color index brightmagenta default ~T  # tagged
color index brightyellow default ~F  # flagged
color header green default "^Subject:"
color header yellow default "^Date:"
color header yellow default "^To:"
color header yellow default "^Cc:"
color header yellow default "^Bcc:"
color header yellow default "^From:"
color header red default "^X-.*:"

# Folder hooks
#folder-hook .*Play    set from="user@home.com"
#folder-hook .*Play    set signature="~/.sig"
#
#folder-hook .*Work    set from="user@work.com"
#folder-hook .*Work    set signature="~/.sig-work"

set query_command = "aboo -m -s '%s'"
