set imap_user = "chneeb@gmail.com"
set imap_pass = `grep imap.gmail.com ~/.authinfo | awk '{print $6}'`

set smtp_url = "smtp://chneeb@smtp.gmail.com:587/"
set smtp_pass = `grep smtp.gmail.com ~/.authinfo | awk '{print $6}'`
set from = "chneeb@gmail.com"
set realname = "Christian Neeb"

set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed="+[Gmail]/Drafts"
set record=

set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
#set certificate_file=~/.mutt/certificates

set move = no

set sort = 'threads'
set sort_aux = 'last-date-received'
set imap_check_subscribed

ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc

# Pretty Colors
color status white blue
color index green  default ~N  # new
color index red default ~D  # deleted
color index brightmagenta default ~T  # tagged
color index brightyellow default ~F  # flagged
color header green default "^Subject:"
color header yellow default "^Date:"
color header yellow default "^To:"
color header yellow default "^Cc:"
color header yellow default "^Bcc:"
color header yellow default "^From:"
color header red default "^X-.*:"

