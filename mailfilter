MAILDIR="$HOME/Mail/GMX"
INBOX="$MAILDIR/INBOX/"
SPAM="$MAILDIR/Spam/"
GMX="$MAILDIR/GMX/"
WORK="$MAILDIR/Work/"
PLAY="$MAILDIR/Play/"

logfile "$HOME/.maildrop.log"

xfilter "/opt/local/bin/bogofilter -u -e -p"
if (/^X-Bogosity: Spam, tests=bogofilter/)
{
  to $SPAM
}

if (/^From:.*mailings@gmx.net/)
{
  to $GMX
}

if (/^From:.*noreply@sms-manager.info/)
{
  to $GMX
}

if (/^(To|Cc|Bcc):.*user@work/)
{
  to $WORK
}

if (/^(To|Cc|Bcc|Delivered-To):(.*user@hot|.*user@gmail)/)
{
  to $PLAY
}

to $INBOX

