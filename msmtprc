# Set default values for all following accounts.
defaults
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
auth on
logfile ~/.msmtp.log

# Gmail
account gmail
host smtp.gmail.com
port 587
from chneeb@gmail.com
user chneeb@gmail.com
passwordeval grep smtp.gmail.com ~/.netrc | awk '{print $6}'

# GMX
account gmx
host mail.gmx.net
port 465
tls_starttls off
from chneeb@gmx.net
user 185774
passwordeval grep pop.gmx.net ~/.netrc | awk '{print $6}'

# Set a default account
account default : gmail

