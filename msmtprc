# Set default values for all following accounts.
defaults
tls on
tls_trust_file /opt/local/share/curl/curl-ca-bundle.crt
auth on
logfile ~/.msmtp.log

# Gmail
account gmail
host smtp.gmail.com
port 587
from chneeb@gmail.com
user chneeb@gmail.com
passwordeval grep smtp.gmail.com ~/.authinfo | awk '{print $6}'

# GMX
account gmx
host mail.gmx.net
port 465
from chneeb@gmx.net
user 185774
passwordeval grep mail.gmx.net ~/.authinfo | awk '{print $6}'

# Set a default account
account default : gmail

