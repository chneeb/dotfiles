general {
        colors = true
        interval = 5
}

order += "cpu_usage"
#order += "load"
#order += "ipv6"
order += "disk /"
#order += "run_watch DHCP"
#order += "run_watch VPN"
#order += "wireless _first_"
#order += "ethernet _first_"
order += "battery 1"
#order += "cpu_temperature 0"
order += "volume master"
order += "tztime local"

cpu_usage {
				format = "CPU %usage"
				max_threshold = 75
}

volume master {
			 format = "â™ª: %volume"
			 format_muted = "â™ª: muted (%volume)"
			 device = "default"
			 mixer = "Master"
			 mixer_idx = 0
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

#battery 1 {
#        format = "%status %percentage %remaining"
#}

